from collections import deque

def solution(bridge_length, weight, truck_weights):
    answer = 0
    bridges = deque([0] * bridge_length)
    
    while bridges:
        answer += 1
        bridges.popleft()
        if truck_weights:
            if (sum(bridges) + truck_weights[0]) <= weight:
                bridges.append(truck_weights.pop(0))
            else:
                bridges.append(0)
    return answer